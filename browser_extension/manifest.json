{
  "manifest_version": 3,
  "name": "Local Activity Tracker – Browser Collector",
  "version": "0.1.0",
  "description": "Sendet Browser-Aktivitäten an den lokalen Activity Tracker (127.0.0.1).",

  "permissions": [
    "tabs",
    "storage"
  ],

  "host_permissions": [
    "http://127.0.0.1:8000/"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_title": "Local Activity Tracker – Browser Collector"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "local-activity-tracker@example.com"
    }
  }
}
